<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="bootstrap/css/bootstrap.min.css">
        <link
          href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"
          rel="stylesheet" type="text/css">
        <link rel="stylesheet" href="css/chat.css">

        <title>SupaChat</title>


    </head>

<body>

    <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">

                <div class="panel panel-default">
                  <div class="panel-heading" id="currentuser"></div>
                  <div class="panel-body">
                      <a href="#" id="logout">Logout</a>
                  </div>
                </div>
                <div class="panel panel-default">
                  <div class="panel-heading">Clients</div>
                  <div class="list-group" id="clientlist">
                  </div>
                </div>

                <div class="panel panel-default">
                  <div class="panel-heading">Rooms</div>
                  <div class="list-group" id="roomlist">
                  </div>
                  <div class="panel-footer">
                      <a href="#" class="list-group-item" data-toggle="modal" data-target="#myModal">Create a new room</a>
                      <a href="#" class="list-group-item" id="delete-room-button">Delete selected room</a>

                  </div>
                </div>

            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 col-md-8">
                        <div class="panel panel-info">
                          <div class="panel-heading">
                            <h1 class="panel-title">Deep conversation on meaning of life</h1>
                            <br />
                            <h1 class="panel-title" id="room-title">SupaChat</h1>
                          </div>
                          <div class="panel-body">
                              <div id="control-buttons">
                                      <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">Toggle Menu</a>
                              </div>
                              <form class="form-inline" id="chatform">
                                  <div class="form-group message-group">
                                      <button type="submit" class="btn btn-default">Send</button>
                                      <input type="text" class="form-control" id="message" />
                                  </div>
                              </form>
                            <ul class="list-group" id="messages"></ul>
                          </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>
    <!-- /#wrapper -->

    <!-- Modal -->
    <div id="myModal" class="modal fade" role="dialog">
      <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h4 class="modal-title">Create a new supaRoom</h4>
          </div>
          <div class="modal-body">

                  <div class="form-group">
                    <p>
                        Creator is the owner and only owners can delete rooms.
                    </p>
                    <input type="text" class="form-control" id="formName" size="20" placeholder="Enter a funny name.">
                    <br />
                  </div>

          </div>
          <div class="modal-footer">
              <button type="button" class="btn btn-default" id="createRoomButton" data-dismiss="modal">Create!</button>
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>

      </div>
    </div>

    <script src="jquery/jquery.min.js"></script>
    <script src="bootstrap/js/bootstrap.min.js"></script>
    <script src="js/ie10-viewport-bug-workaround.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/chat.js"></script>

</body>
</html>
